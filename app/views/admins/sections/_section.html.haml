= turbo_frame_tag dom_id(section) do
	= build_accordion(active_color: 'text-purple-600', header: section.title) do
		%div{ class: 'flex flex-col gap-4 mb-4', data: { controller: 'drag-drop', 'drag-drop-handle-value': '.cursor-move' } }

			= render partial: 'admins/courses/modules/course_module', collection: section.course_modules.order(:position), as: :mod

		/ Button Modal
		%button.p-1.border.border-indigo-600.rounded-md.w-full.bg-indigo-50.group.hover:bg-indigo-200{"data-modal-target" => "module_modal",
		 "data-modal-toggle" => "module_modal",
		  type: "button"}
			.flex.justify-start.items-center.gap-4
				.w-16.h-16.rounded-md.flex.justify-center.items-center.group-hover:border.group-hover:boder-indigo-100
					%span.text-xl +
				%span.font-mono Agregar Recurso


		/ Modal
		#module_modal.fixed.top-0.left-0.right-0.z-50.hidden.w-full.p-4.overflow-x-hidden.overflow-y-auto.md:inset-0.h-modal.md:h-full{"aria-hidden" => "true", tabindex: "-1"}
			.relative.w-full.h-full.max-w-2xl.md:h-auto
				/ Modal content
				.relative.bg-white.rounded-lg.shadow
					/ Modal header
					.flex.items-start.justify-between.p-4.border-b.rounded-t
						%h3.text-xl.font-semibold.text-gray-900
							Agregar Recurso
						%button.text-gray-400.bg-transparent.hover:bg-gray-200.hover:text-gray-900.rounded-lg.text-sm.ml-auto.inline-flex.items-center{class: "p-1.5", "data-modal-hide" => "module_modal", type: "button"}
							%svg.w-5.h-5{"aria-hidden" => "true", fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
								%path{"clip-rule" => "evenodd", d: "M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z", "fill-rule" => "evenodd"}
							%span.sr-only Close modal

					/ Modal body
					.p-6.space-y-6

						.flex.items-center.justify-around.gap-4
							
							= link_to new_admins_courses_modules_section_page_path(section),
							 class: 'w-48 h-48 flex justify-center items-center rounded-md hover:text-white text-[4rem] border border-purple-800 hover:border-0 bg-purple-300 hover:bg-purple-700', 
							 title: 'Agregar Pagina' do
								%i.fa-regular.fa-file-lines


							= link_to new_admins_courses_modules_section_quiz_path(section),
							 class: 'w-48 h-48 flex justify-center items-center rounded-md hover:text-white text-[4rem] border border-rose-800 hover:border-0 bg-rose-300 hover:bg-rose-700', 
							 title: 'Agregar Cuestionario' do
								%i.fa-solid.fa-file-pen
= turbo_frame_tag dom_id(section) do
	.my-4
		= build_accordion(title: section.title, h_classes: 'bg-purple-800 text-white text-bold') do
			.flex.flex-col.gap-4.m-4
				= link_to 'edit', edit_admins_course_section_path(section.course_id, section), class: 'w-full py-4 rounded bg-yellow-500 text-center'

				= button_to 'Delete', admins_course_section_path(section.course_id, section), { class: 'w-full py-4 rounded bg-red-600', method: :delete }
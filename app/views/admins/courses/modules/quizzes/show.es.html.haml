= render 'shared/header_module', model: @quiz
.flex.justify-between
	= link_to 'Registrar pregunta', new_admins_courses_modules_quiz_question_path(@quiz), class: 'rounded-lg py-3 px-5 bg-purple-600 text-white inline-block font-medium cursor-pointer'

= @quiz.description

%p.font-bold.text-4xl.mb-8
	Valor Minimo Aprobatorio
	= "#{@quiz.min_value}/#{@quiz.value}"

%p.font-bold.text-4xl.mb-8= "Intentos de Usuarios: #{@quiz.quiz_attempts.size}"


%p.font-bold.text-4xl.w-full.text-center= "Suma de Valores de las preguntas: #{@quiz.sum_values}"

.overflow-x-scroll
	%table.rounded-t-lg.m-5.mx-auto.text-pink-100.bg-purple-900{ class: "w-5/6" }
		%thead
			%tr.text-left.border-b-2.border-pink-200.font-bold
				%th.px-4.py-3 &
				%th.px-4.py-3 Titulo
				%th.px-4.py-3 Puntacion
				%th.px-4.py-3 Tipo de Pregunta
				%th.px-4.py-3 Acciones
		%tbody{ data: { controller: 'drag-drop', 'drag-drop-handle-value': '.fa-up-down-left-right' } }
			- @quiz.quiz_questions.order(:position).each do |question|
				%tr.bg-purple-700.font-semibold{ id: dom_id(question), data: { item_id: question.id, move_url: admins_courses_modules_move_question_path(question) } }
					%td.px-4.py-3.border-b.border-purple-500
						%i.fa-solid.fa-up-down-left-right.text-xl.cursor-pointer
					%td.px-4.py-3.border-b.border-purple-500
						= link_to question.title, edit_admins_courses_modules_question_path(question), class: 'hover:text-purple-100 visited:text-rose-100', title: 'Editar Pregunta'
					%td.px-4.py-3.border-b.border-purple-500= question.score
					%td.px-4.py-3.border-b.border-purple-500= question.question_type
					%td.px-4.py-3.border-b.border-purple-500
						= button_to 'Borrar', admins_courses_modules_question_path(question), { method: :delete, class: 'rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer' } 
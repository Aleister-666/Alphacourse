.flex.justify-between
	%h1= @quiz.title
	
	= link_to 'Registrar pregunta', new_admins_courses_modules_quiz_question_path(@quiz), class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer'

= @quiz.description


.my-4
	= build_accordion(title: "Preguntas", h_classes: 'bg-rose-800 text-white text-bold cursor-pointer w-full') do
		.flex.flex-col.gap-4.m-4
			%div{ class: 'flex flex-col gap-4', data: { controller: 'drag-drop', 'drag-drop-handle-value': '.fa-up-down-left-right' } }

				= render partial: 'admins/courses/modules/quizzes/questions/question', collection: @quiz.quiz_questions.order(:position), as: :question

			.flex.flex-col.gap-4.my-8.bg-gray-700
				= link_to 'New Page', nil, class: 'w-full py-4 rounded bg-purple-500 text-center'

				= link_to 'New quiz', nil, class: 'w-full py-4 rounded bg-purple-500 text-center'

				= link_to 'edit', nil, class: 'w-full py-4 rounded bg-yellow-500 text-center'

				= button_to 'Delete', nil, { class: 'w-full py-4 rounded bg-red-600', method: :delete }
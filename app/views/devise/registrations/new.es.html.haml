!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Alphacourse
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
    :css
      .body-bg {
        background-color: #FE1582;
        background-image: linear-gradient(315deg, #FE1582 0%, #8500B7 74%);
      }
  %body.body-bg.min-h-screen.pt-12.md:pt-20.pb-6.px-2.md:px-0{:style => "font-family:'Lato',sans-serif;"}
    %header.max-w-lg.mx-auto
      %a{:href => "#"}
        %h1.text-4xl.font-bold.text-white.text-center= t('devise.registrations.new.sign_up')
    %main.bg-white.max-w-lg.mx-auto.p-8.md:p-12.my-10.rounded-lg.shadow-2xl
      %section
        %h3.font-bold.text-2xl Bienvenido registrate para ingresar
        %p.text-gray-600.pt-2 Crea una nueva cuenta de Estudiante
        = render 'shared/flash'
      %section.mt-10

        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col', data: { turbo: false } }) do |f|
          = render "devise/shared/error_messages", resource: resource

          .mb-6.pt-3.rounded.bg-gray-200
            = f.label :username, class: 'block text-gray-700 text-sm font-bold mb-2 ml-3'
            = f.text_field :username, autofocus: true, class: 'bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3'

          .mb-6.pt-3.rounded.bg-gray-200
            = f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2 ml-3'
            = f.email_field :email, autocomplete: "email", class: 'bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3'

          .mb-6.pt-3.rounded.bg-gray-200
            = f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2 ml-3'
            = f.password_field :password, autocomplete: "current-password", class: 'bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3'

          .mb-6.pt-3.rounded.bg-gray-200
            = f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold mb-2 ml-3'
            = f.password_field :password_confirmation, autocomplete: "current-password", class: 'bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3'

          .flex.justify-end
            = link_to t('devise.passwords.new.forgot_your_password'), new_password_path(resource_name), class: 'text-sm text-purple-600 hover:text-purple-700 hover:underline mb-6'

          = f.submit t('devise.registrations.new.sign_up'), class: 'bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200'
    .max-w-lg.mx-auto.text-center.mt-12.mb-6
      %p.text-white
        Ya tienes una cuenta?
        = link_to t('devise.sessions.new.sign_in'), new_session_path(resource_name), class: 'font-bold hover:underline'
    %footer.max-w-lg.mx-auto.flex.justify-center.text-white

= render 'shared/back_link', url_back: nil

%h2.text-3xl.font-bold Editar Usuario

= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource

  .mb-4.flex.flex-col.gap-4
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}

  .mb-4.flex.flex-col.gap-4
    = f.label :password
    %span (dejalo en blanco si no quieres cambiarlo)

    = f.password_field :password, autocomplete: "new-password", class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full'
    - if @minimum_password_length
      %em
        = @minimum_password_length
        caracteres minimo
  .mb-4.flex.flex-col.gap-4
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full'
  .mb-4.flex.flex-col.gap-4
    = f.label :current_password
    %span (Para confirmar cambios introduce tu contrase√±a actual)
    = f.password_field :current_password, autocomplete: "current-password", class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full'
  .mb-4
    = f.submit "Actualizar", class: 'rounded-lg py-3 px-5 bg-purple-600 text-white inline-block font-medium cursor-pointer'

%h3.mb4 Cancelar mi Cuenta
%div
  No estas feliz?
  = button_to "Cancelar mi Cuenta", registration_path(resource_name), data: { confirm: "Estas Seguro" }, method: :delete, class: 'rounded-lg py-3 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer'
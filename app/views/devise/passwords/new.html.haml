!!!
%html{:lang => "es"}
	%head
		%meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
		%title Alphacourse
		%meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
		= csrf_meta_tags
		= csp_meta_tag
		= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
		= stylesheet_link_tag "application", "data-turbo-track": "reload"
		= javascript_importmap_tags
		:css
			.body-bg {
				background-color: #FE1582;
				background-image: linear-gradient(315deg, #FE1582 0%, #8500B7 74%);;
			}
	%body.body-bg.min-h-screen.pb-6.px-2.md:px-0{:style => "font-family:'Lato',sans-serif;"}
		%header.max-w-lg.mx-auto
			%h1.text-4xl.font-bold.text-white.text-center Recuperar Contraseña
		%main.bg-white.max-w-lg.mx-auto.p-8.md:p-12.my-10.rounded-lg.shadow-2xl
			%section
				%h3.font-bold.text-2xl Olvidaste tu Contraseña?
				%p.text-gray-600.pt-2 Recuperala con tu correo electronico

				- if notice
					.flex.p-4.text-sm.text-green-700.border.border-green-300.rounded-lg.bg-green-50{
						role: "alert",
						class: 'w-full'
					}
						%svg.flex-shrink-0.inline.w-5.h-5.mr-3{"aria-hidden" => "true", fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
							%path{"clip-rule" => "evenodd", d: "M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z", "fill-rule" => "evenodd"}
						%span.sr-only Info
						%div
							%span.font-medium= notice

				- if alert
					.flex.p-4.text-sm.text-red-700.border.border-red-300.rounded-lg.bg-red-50{
						role: "alert",
						class: 'w-full'
					}
						%svg.flex-shrink-0.inline.w-5.h-5.mr-3{"aria-hidden" => "true", fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
							%path{"clip-rule" => "evenodd", d: "M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z", "fill-rule" => "evenodd"}
						%span.sr-only Info
						%div
							%span.font-medium= alert


			%section.mt-5
				= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'flex flex-col', data: { turbo: false } }) do |f|
					= render 'devise/shared/error_messages'
					.mb-6.pt-3.rounded.bg-gray-200
						= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2 ml-3'
						= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3'

					= f.submit "Recuperar Contraseña", class: 'bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200'

		.max-w-lg.mx-auto.text-center.mt-12.mb-6
			%p.text-white
				No tienes una cuenta?
				= link_to t('devise.registrations.new.sign_up'), new_registration_path(resource_name), class: 'font-bold hover:underline'
		%footer.max-w-lg.mx-auto.flex.justify-center.text-white
			= link_to "Inicio", root_path, class: 'hover:underline'
			%span.mx-3 •
			= link_to 'Github', 'https://github.com/Aleister-666', class: 'no-underline hover:underline'
			%span.mx-3 •
			= link_to 'Acerca de', about_path, class: 'no-underline hover:underline'

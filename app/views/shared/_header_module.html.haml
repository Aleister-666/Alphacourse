- if model.is_a?(ModulePage)
	.flex.flex-start.gap-4.m-4
		.p-4.rounded.bg-purple-700.text-white
			%i.fa-regular.fa-file-lines.text-3xl
		.flex.flex-col
			%span.text-xs.font-mono PAGINA
			%h5.font-bold.text-xl= model.title
	%hr.border-black

- else
	.flex.flex-start.gap-4.m-4
		.p-4.rounded.bg-rose-700.text-white
			%i.fa-solid.fa-file-pen.text-3xl
		.flex.flex-col
			%span.text-xs.font-mono CUESTIONARIO
			%h5.font-bold.text-xl= model.title
	%hr.border-black